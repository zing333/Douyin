<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/video_music_volume_ll"
    android:layout_width="fill_parent"
    android:layout_height="204.0dip"
    android:background="@color/colorGray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_54dp"
        android:layout_marginTop="13.0dip">

        <ImageView
            android:id="@id/sound_min_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.0dip"
            android:layout_marginStart="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_SOUND_VOLUME"
            android:src="@drawable/icon_15_sound_vol_0"
            android:tint="@color/colorWhite_5" />

        <!--<com.blink.academy.onetake.widgets.SeekBar.CustomSeekBar-->
        <cn.nineton.onetake.widget.CustomSeekBar
            android:id="@id/video_music_video_sound_seek"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sound_max_iv"
            android:layout_toRightOf="@id/sound_min_iv"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp" />

        <ImageView
            android:id="@id/sound_max_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26.0dip"
            android:layout_marginRight="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_SOUND_VOLUME"
            android:src="@drawable/icon_15_sound_vol_10"
            android:tint="@color/colorWhite_5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_54dp"
        android:layout_marginTop="68.0dip">

        <ImageView
            android:id="@id/music_min_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.0dip"
            android:layout_marginStart="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_MUSIC_VOLUME"
            android:gravity="center"
            android:src="@drawable/icon_15_music_vol_0"
            android:tint="@color/colorWhite_5" />

        <ImageView
            android:id="@id/music_max_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26.0dip"
            android:layout_marginRight="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_MUSIC_VOLUME"
            android:gravity="center"
            android:src="@drawable/icon_15_music_vol_10"
            android:tint="@color/colorWhite_5" />

        <!--<com.blink.academy.onetake.widgets.SeekBar.CustomSeekBar-->
        <cn.nineton.onetake.widget.CustomSeekBar
            android:id="@id/video_music_audio_sound_seek"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/music_max_iv"
            android:layout_toRightOf="@id/music_min_iv"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_gravity="bottom|center"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/video_music_cancel_iv"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="centerInside"
            android:src="@drawable/icon_25_cancel"
            android:tint="@color/colorWhite" />

        <ImageView
            android:id="@id/video_music_confirm_iv"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="centerInside"
            android:src="@drawable/icon_25_confirm"
            android:tint="@color/colorWhite" />
    </LinearLayout>
</FrameLayout>