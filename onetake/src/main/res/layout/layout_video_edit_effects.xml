<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/video_edit_effect_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorGray"
    android:orientation="vertical">

    <!--<com.blink.academy.onetake.widgets.WheelPager.MeasureSizeFrameLayout-->
    <cn.nineton.onetake.widget.MeasureSizeFrameLayout
        android:id="@id/zoom_msfl"
        android:layout_width="fill_parent"
        android:layout_height="65.0dip"
        android:layout_marginLeft="26.0dip"
        android:layout_marginRight="26.0dip"
        android:paddingTop="20.0dip">

        <!--<com.blink.academy.onetake.widgets.loop.HorizontalLoopView-->
        <cn.nineton.onetake.widget.HorizontalLoopView
            android:id="@id/zoom_loop"
            awv_lineSpace="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="15.0dip"
            android:src="@drawable/shape_drafts_bottom" />
    </cn.nineton.onetake.widget.MeasureSizeFrameLayout>

    <!--<com.blink.academy.onetake.widgets.WheelPager.MeasureSizeFrameLayout-->
    <cn.nineton.onetake.widget.MeasureSizeFrameLayout
        android:id="@id/speed_msfl"
        android:layout_width="fill_parent"
        android:layout_height="65.0dip"
        android:layout_marginLeft="26.0dip"
        android:layout_marginRight="26.0dip"
        android:paddingTop="20.0dip">

        <!--<com.blink.academy.onetake.widgets.loop.HorizontalLoopView-->
        <cn.nineton.onetake.widget.HorizontalLoopView
            android:id="@id/speed_loop"
            awv_lineSpace="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="15.0dip"
            android:src="@drawable/shape_drafts_bottom" />
    </cn.nineton.onetake.widget.MeasureSizeFrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65.0dip"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@id/sound_min_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.0dip"
            android:layout_marginStart="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_SOUND_VOLUME"
            android:src="@drawable/icon_15_sound_vol_0"
            android:tint="@color/colorWhite_5" />

        <ImageView
            android:id="@id/sound_max_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26.0dip"
            android:layout_marginRight="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_SOUND_VOLUME"
            android:src="@drawable/icon_15_sound_vol_10"
            android:tint="@color/colorWhite_5" />

        <!--<com.blink.academy.onetake.widgets.SeekBar.CustomSeekBar-->
        <cn.nineton.onetake.widget.CustomSeekBar
            android:id="@id/sound_seekBar"
            android:layout_width="220.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sound_max_iv"
            android:layout_toRightOf="@id/sound_min_iv"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65.0dip"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@id/music_min_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.0dip"
            android:layout_marginStart="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_MUSIC_VOLUME"
            android:gravity="center"
            android:src="@drawable/icon_15_music_vol_0"
            android:tint="@color/colorWhite_5" />

        <ImageView
            android:id="@id/music_max_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26.0dip"
            android:layout_marginRight="26.0dip"
            android:contentDescription="@string/TEXT_VIDEO_EDIT_EFFECTS_MUSIC_VOLUME"
            android:gravity="center"
            android:src="@drawable/icon_15_music_vol_10"
            android:tint="@color/colorWhite_5" />

        <!--<com.blink.academy.onetake.widgets.SeekBar.CustomSeekBar-->
        <cn.nineton.onetake.widget.CustomSeekBar
            android:id="@id/music_seekBar"
            android:layout_width="240.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/music_max_iv"
            android:layout_toRightOf="@id/music_min_iv"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65.0dip"
        android:gravity="center_vertical">

        <ImageView
            android:id="@id/brightness_min_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26.0dip"
            android:layout_marginStart="26.0dip"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/icon_15_brightness_left"
            android:tint="@color/colorWhite_5" />

        <ImageView
            android:id="@id/brightness_max_iv"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="26.0dip"
            android:layout_marginRight="26.0dip"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/icon_15_brightness_right"
            android:tint="@color/colorWhite_5" />

        <!--<com.blink.academy.onetake.widgets.SeekBar.CustomSeekBar-->
        <cn.nineton.onetake.widget.CustomSeekBar
            android:id="@id/bright_seekBar"
            android:layout_width="240.0dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/brightness_max_iv"
            android:layout_toRightOf="@id/brightness_min_iv"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/cancel_btn_iv"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="centerInside"
            android:src="@drawable/icon_25_cancel"
            android:tint="@color/colorWhite" />

        <ImageView
            android:id="@id/confirm_btn_iv"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:scaleType="centerInside"
            android:src="@drawable/icon_25_confirm"
            android:tint="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>