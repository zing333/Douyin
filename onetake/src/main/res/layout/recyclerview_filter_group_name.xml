<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/filter_group_name_rl"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="0.0dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            android:id="@id/filter_group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:shadowColor="@color/color60Black"
            android:shadowRadius="15.0"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontRegular14" />

        <ImageView
            android:id="@id/filter_group_name_bottom_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_group_name_tv"
            android:layout_marginTop="5.0dip"
            android:contentDescription="@null"
            android:src="@drawable/shape_drafts_bottom"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:id="@id/filter_group_point_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:src="@drawable/shape_filter_group_name"
        android:visibility="visible" />
</LinearLayout>